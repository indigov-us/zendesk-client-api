{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "module": "commonjs",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "typeRoots": ["index.d.ts", "node_modules/@types"],
    "lib": ["es2017", "dom"]
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "index.d.ts"],
  "exclude": ["node_modules"]
}
